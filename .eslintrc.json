{
    "env": {
      "browser": true,
      "es2021": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["src"]
        }
      },
      "import/extensions": [
        ".ts",
        ".tsx"
      ]
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "extends": [ "airbnb-base", "airbnb-typescript", "plugin:prettier/recommended"],
    "plugins": [
      "react",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "import/prefer-default-export": "off",
      "default-param-last" : "off",
      "eqeqeq": "off",
      "curly": "error"
    }
  }